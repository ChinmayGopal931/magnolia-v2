# Production Environment Variables Template
# Copy this to .env for production deployment

# PostgreSQL Configuration (use strong passwords!)
POSTGRES_DB=magnolia_v2_prod
POSTGRES_USER=magnolia_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# Application Configuration
NODE_ENV=production
PORT=3000

# Hyperliquid Configuration
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_CHAIN=Mainnet
HYPERLIQUID_SIGNATURE_CHAIN_ID=0xa4b1

# Security (generate a strong secret)
API_SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_KEY

# CORS (update with your actual frontend domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# SSL/TLS (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=